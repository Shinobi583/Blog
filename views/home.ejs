<!DOCTYPE html>
<html lang="en">

<%- include("partials/header") %>

<body id="home">

    <%- include("partials/navbar") %>

    <main>
        <%= success %>
        <%= error %>
        <section class="hero">
            <h1>The Ripple Effect</h1>
            <p>A relaxed blog for anyone who wants to learn!</p>
        </section>
        
        <section class="d-grid">

            <% for (let i=0; i < posts.length; i++) { %>
            
                <a href="/articles/<%= posts[i].slug %>" class="article-link">
                    <div class="article">
                        <%= posts[i].title %>
                    </div>
                </a>
                <% } %>

        </section>

    </main>
</body>
</html>