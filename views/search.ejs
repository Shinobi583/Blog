<!DOCTYPE html>
<html lang="en">

<%- include("partials/header") %>

<body id="search">

    <%- include("partials/navbar") %>

        <main>
            <section class="hero">
                <h1>Search Results</h1>
            </section>

            <section class="home-main">

                <% for (let i=0; i < posts.length; i++) { %>

                    <a href="/articles/<%= posts[i].slug %>" class="article-link">
                        <div class="article">
                            <%= posts[i].title %>
                        </div>
                    </a>
                    <% } %>

            </section>

        </main>

        <%- include("partials/footer") %>
</body>

</html>